<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    tools:context=".Activity.TambahDataActivity">

    <include
        android:id="@+id/include3"
        layout="@layout/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include3"
        app:srcCompat="@color/cardhome" />

    <TextView
        android:id="@+id/text_tambahdata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Tambah Data"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="189dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:background="#000000"
        android:padding="1dp"
        app:layout_constraintEnd_toEndOf="@+id/text_tambahdata"
        app:layout_constraintStart_toStartOf="@+id/text_tambahdata"
        app:layout_constraintTop_toBottomOf="@+id/text_tambahdata"
        app:srcCompat="@color/cardhome" />

    <TextView
        android:id="@+id/text_tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03 Feb. 2019"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

    <TextView
        android:id="@+id/text_judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="156dp"
        android:text="Judul                 :"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/txt_pemasukan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="Pemasukan      :"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_judul"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/txt_pengeluaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="244dp"
        android:text="Pengeluaran    :"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_pemasukan"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/txt_ket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="288dp"
        android:text="Keterangan      :"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_pengeluaran"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <EditText
        android:id="@+id/editText_judul"
        android:layout_width="193dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/text_judul"
        app:layout_constraintStart_toEndOf="@+id/text_judul"
        app:layout_constraintTop_toTopOf="@+id/text_judul" />

    <EditText
        android:id="@+id/editText_pmsukan"
        android:layout_width="193dp"
        android:layout_height="44dp"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/txt_pemasukan"
        app:layout_constraintStart_toStartOf="@+id/editText_judul"
        app:layout_constraintTop_toTopOf="@+id/txt_pemasukan" />

    <EditText
        android:id="@+id/editText_pngeluaran"
        android:layout_width="193dp"
        android:layout_height="44dp"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/txt_pengeluaran"
        app:layout_constraintStart_toStartOf="@+id/editText_pmsukan"
        app:layout_constraintTop_toTopOf="@+id/txt_pengeluaran" />

    <EditText
        android:id="@+id/editText_ket"
        android:layout_width="193dp"
        android:layout_height="44dp"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/txt_ket"
        app:layout_constraintStart_toStartOf="@+id/editText_pngeluaran"
        app:layout_constraintTop_toTopOf="@+id/txt_ket" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simpan"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/editText_ket"
        app:layout_constraintStart_toStartOf="@+id/txt_ket"
        app:layout_constraintTop_toBottomOf="@+id/editText_ket"
        app:layout_constraintVertical_bias="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>