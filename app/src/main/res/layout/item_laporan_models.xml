<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="1dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/text_value_tanggal"
            app:layout_constraintTop_toBottomOf="@+id/text_value_tanggal">

            <ImageView
                android:id="@+id/bgRvLaporanModels"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/headcolor"
                android:padding="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@color/cardhome" />

            <ImageView
                android:id="@+id/bg_tanggal"
                android:layout_width="90dp"
                android:layout_height="70dp"
                app:layout_constraintBottom_toBottomOf="@+id/bgRvLaporanModels"
                app:layout_constraintEnd_toEndOf="@+id/bgRvLaporanModels"
                app:layout_constraintHorizontal_bias="0.00"
                app:layout_constraintStart_toStartOf="@+id/bgRvLaporanModels"
                app:layout_constraintTop_toTopOf="@+id/bgRvLaporanModels"
                app:srcCompat="@color/headcolor" />

            <TextView
                android:id="@+id/text_value_tanggal"
                android:layout_width="55dp"
                android:layout_height="35dp"
                android:text="11 Jan.\n2019"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@+id/bg_tanggal"
                app:layout_constraintEnd_toEndOf="@+id/bg_tanggal"
                app:layout_constraintStart_toStartOf="@+id/bg_tanggal"
                app:layout_constraintTop_toTopOf="@+id/bg_tanggal" />

            <TextView
                android:id="@+id/textView_pemasukan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="Pemasukan"
                android:textStyle="normal"
                app:layout_constraintStart_toEndOf="@+id/bg_tanggal"
                app:layout_constraintTop_toTopOf="@+id/bg_tanggal" />

            <TextView
                android:id="@+id/text_value_pemasukan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="2dp"
                android:text="Rp. 1.000.000"
                android:textColor="#000000"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@+id/textView_pemasukan"
                app:layout_constraintStart_toEndOf="@+id/textView_pemasukan"
                app:layout_constraintTop_toTopOf="@+id/textView_pemasukan" />

            <TextView
                android:id="@+id/textView_pengeluaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Pengeluaran"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@+id/bg_tanggal"
                app:layout_constraintStart_toStartOf="@+id/textView_pemasukan" />

            <TextView
                android:id="@+id/text_value_pengeluaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 2.200.000"
                android:textColor="#018337"
                android:textStyle="normal"

                app:layout_constraintEnd_toEndOf="@+id/text_value_pemasukan"
                app:layout_constraintStart_toStartOf="@+id/text_value_pemasukan"
                app:layout_constraintTop_toTopOf="@+id/textView_pengeluaran" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>